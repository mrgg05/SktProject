        <table class="table">
            <tr>
                <th>CategoryName</th>
                <th>Description</th>
            </tr>
            <tr ng-repeat="x in category">
                <td>{{x.CategoryName}}</td>
                <td>{{x.Description}}</td>
                <td>
                    @*<input type="button" class="btn btn-danger" ng-model="deleteCat(x)" value="Delete" data-toggle="modal" data-target="#myModalDelete" />*@
                    <span ng-click="editEmployee(x)" class="btn btn-default">Edit</span>
                    <span ng-click="deleteCat(x)" class="btn btn-default">Delete</span>
                </td>
            </tr>
        </table>
        <input type="button" class="btn btn-success" value="Category Add" data-toggle="modal" data-target="#myModal" />


        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <div ng-model="addCat" style="padding-top:100px">
                            <table>
                                <tr>
                                    <th>CategoryName</th>
                                    <th>
                                        <input type="text" ng-model="categoryName" />
                                    </th>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <th>
                                        <input type="text" ng-model="catDescription" />
                                    </th>
                                </tr>
                                @*<tr>
                                    <td colspan="2"></td>
                                </tr>*@
                            </table>
                        </div>
                        <div class="modal-footer">
                            <input type="button" ng-click="addCategory()" class="btn btn-success" value="Kaydet" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>




        
        <div class="modal fade" id="myModalDelete" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <div ng-model="deleteCat" style="padding-top:100px">
                            <table>
                                <tr>
                                    <th>CategoryName</th>
                                    <th>
                                        <input type="text" ng-model="categoryName" />
                                    </th>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <th>
                                        <input type="text" ng-model="catDescription" />
                                    </th>
                                </tr>
                                @*<tr>
                                    <td colspan="2"></td>
                                </tr>*@
                            </table>
                        </div>
                        <div class="modal-footer">
                            <input type="button" ng-click="addCategory()" class="btn btn-success" value="Kaydet" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    
